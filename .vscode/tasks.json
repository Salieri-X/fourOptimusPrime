{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile src",
            "command": "/usr/bin/g++",
            "args": [
                "-I",
                "${workspaceFolder}/include",
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/cpp/*.cpp",
                //"${workspaceFolder}/src/c/*.c",
                "-o",
                "${workspaceFolder}/out/main",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}